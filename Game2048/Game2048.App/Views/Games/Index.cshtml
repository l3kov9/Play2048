@model Game

<div class="row">
    <br />
    <div class="col-md-3">
        <h1>Play 2048</h1>
        <a asp-action="Index" class="btn btn-success">New Game</a>
        <p style="margin-top:100px; font-size:30px;">Join the numbers and get 2048!</p>
        <p>
            HOW TO PLAY: Use your arrow keys to move the tiles. When two tiles with the same number touch, they merge into one!
        </p>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-6">
        @await Html.PartialAsync("_GameBoardPartial", Model)
    </div>
</div>
<div style="height:100px"></div>
