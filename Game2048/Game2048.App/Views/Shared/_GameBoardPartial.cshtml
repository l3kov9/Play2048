@model GameGrid

<form asp-controller="Games" asp-action="Index" id="gameForm">
    @for (int i = 0; i < Model.Field.GetLength(0); i++)
    {
        <div class="row">
            @for (int k = 0; k < Model.Field.GetLength(1); k++)
            {
                <div class="col-md-3">
                    @{
                        var numberToShow = Model.Field[i,k] == 0 ? string.Empty : Model.Field[i,k].ToString();
                    }
                    <input value="@numberToShow" name="matrix" class="form-control" id="inputField" readonly />
                </div>
            }
        </div>
    }
    <div id="arrowInput">
    </div>
</form>